            android1:src="@drawable/icono_contacto" />

        <ImageView
            android1:id="@+id/imageView3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_x="460dp"
            android1:layout_y="5dp"
            android1:src="@drawable/estrella_gris_grande" />

        <ImageView
            android1:id="@+id/imageView4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_x="500dp"
            android1:layout_y="5dp"
            android1:src="@drawable/estrella_gris_grande" />

