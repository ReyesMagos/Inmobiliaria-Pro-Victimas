            android1:textSize="26sp" />

        <TextView
            android1:id="@+id/txtTel"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_x="20dp"
            android1:layout_y="294dp"
            android1:text="Tel: 01800-419583"
